<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaloriesDisplay">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mycolor"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:buttonGravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:navigationIcon="@drawable/backbutton" />

        <TextView
            android:id="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="1dp"

            android:layout_marginEnd="0dp"
            android:text="HealthyMe"
            android:textColor="@color/white"
            android:textSize="26sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="316dp"
        android:layout_height="71dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:fontFamily="serif"
        android:text="Based on your details your BMI is:"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="100dp"
        android:fontFamily="serif"
        android:text="BMI"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="264dp"
        android:fontFamily="serif"
        android:text="Choose your goal"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="322dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="432dp"
        android:fontFamily="serif"
        android:text="Based on your goal, our recommendations are"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="329dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="356dp"
        android:entries="@array/user_goals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="532dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="312dp"
        android:layout_height="42dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="180dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        style="@style/AppTheme"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:text="Start now"
        android:layout_marginTop="664dp"
        android:background="@drawable/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>