<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard2"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
       android:id="@+id/nav_drawer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/navigationtheme"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/menu">

            </ImageView>

            <ImageView
                android:layout_width="71dp"
                android:layout_height="49dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/calendartoday">

            </ImageView>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/Track"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="28sp">

                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="378dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="12dp"
                        android:indeterminateDrawable="@drawable/pb_drawable1"
                        android:indeterminateDuration="50"
                        android:progress="40">

                    </ProgressBar>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/cal1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp">

                    </TextView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/cal2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp">

                    </TextView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="47dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="200dp"
                            android:layout_marginBottom="23dp"
                            android:text="@string/pro"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp"></TextView>

                        <ProgressBar
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="22dp"
                            android:indeterminateDrawable="@drawable/pb_drawable1"
                            android:indeterminateDuration="50"
                            android:progress="40"></ProgressBar>

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="40dp"
                            android:text="@string/carbs"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <ProgressBar

                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"

                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="114dp"
                            android:layout_marginBottom="23dp"
                            android:indeterminateDrawable="@drawable/pb_drawable1"
                            android:indeterminateDuration="50"
                            android:progress="40">

                        </ProgressBar>

                        <TextView
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="102dp"
                            android:layout_marginBottom="41dp"
                            android:text="@string/fat"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <ProgressBar

                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="25dp"
                            android:indeterminateDrawable="@drawable/pb_drawable1"
                            android:indeterminateDuration="50"
                            android:progress="40">

                        </ProgressBar>

                        <TextView
                            android:id="@+id/protein"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="286dp"
                            android:layout_marginBottom="0.5dp"
                            android:text="200g left"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/carbb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="155dp"
                            android:layout_marginBottom="1dp"
                            android:text="200g left"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/carbb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="29dp"
                            android:layout_marginBottom="1dp"
                            android:text="200g left"
                            android:textColor="@color/black" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/ic_baseline_free_breakfast_24">

                        </ImageView>

                        <Button
                            android:id="@+id/breakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="30dp"
                            android:text="@string/add"
                            android:textColor="@color/add"
                            android:textSize="25sp">

                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65dp"
                            android:layout_marginBottom="361dp"
                            android:gravity="center"
                            android:text="@string/breakfast"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_marginBottom="134dp"
                            android:gravity="center"
                            android:text="@string/approx"
                            android:textColor="@color/black"
                            android:textSize="18sp">

                        </TextView>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="391dp"
                        android:layout_height="248dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/ic_baseline_free_breakfast_24">

                        </ImageView>

                        <Button
                            android:id="@+id/lunch"
                            android:onClick="searchFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="30dp"
                            android:text="@string/add"
                            android:textColor="@color/add"
                            android:textSize="25sp">

                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65dp"
                            android:layout_marginBottom="361dp"
                            android:gravity="center"
                            android:text="@string/lunch"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:gravity="center"
                            android:text="@string/approx"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/ic_baseline_free_breakfast_24">

                        </ImageView>

                        <Button
                            android:id="@+id/dinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="30dp"
                            android:text="@string/add"
                            android:textColor="@color/add"
                            android:textSize="25sp">

                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65dp"
                            android:layout_marginBottom="361dp"
                            android:gravity="center"
                            android:text="@string/dinner"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_marginBottom="134dp"
                            android:gravity="center"
                            android:text="@string/approx"
                            android:textColor="@color/black"
                            android:textSize="18sp">

                        </TextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/ic_baseline_free_breakfast_24">

                        </ImageView>

                        <Button
                            android:id="@+id/snack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="30dp"
                            android:text="@string/add"
                            android:textColor="@color/add"
                            android:textSize="25sp">

                        </Button>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65dp"
                            android:layout_marginBottom="361dp"
                            android:gravity="center"
                            android:text="@string/snack"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:layout_marginBottom="134dp"
                            android:gravity="center"
                            android:text="@string/approx"
                            android:textColor="@color/black"
                            android:textSize="18sp">

                        </TextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/bottom_navigator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:itemBackground="@color/colorPrimaryDark"
                        app:itemTextColor="@color/black"
                        app:menu="@menu/bottom_nav_menu">

                    </com.google.android.material.bottomnavigation.BottomNavigationView>
                </RelativeLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>